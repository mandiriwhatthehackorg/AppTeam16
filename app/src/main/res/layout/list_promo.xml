<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="240dp"
    android:layout_height="130dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/rounded_rectangle">

    <LinearLayout
        android:id="@+id/llPromo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvPromoTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beli 1 Gratis 1"
            android:textSize="12sp"
            android:fontFamily="@font/myriadprobold"/>

        <TextView
            android:id="@+id/tvPromoDetail"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:text="Dengan Fiesta Poin Klik di Sini"
            android:textSize="12sp"
            android:lines="2"
            android:fontFamily="@font/myriadproregular"/>

    </LinearLayout>

</LinearLayout>