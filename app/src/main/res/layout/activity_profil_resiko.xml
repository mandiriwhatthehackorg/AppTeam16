<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.activities.ProfilResikoActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbCekTipe"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:contentInsetLeft="0dp"
        android:contentInsetStart="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        android:contentInsetRight="0dp"
        android:contentInsetEnd="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetEnd="0dp"
        android:background="@drawable/toolbar_gradient">

        <LinearLayout
            android:id="@+id/llCekTipe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/investasiBackButton"
                    android:clickable="true"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/mandiri_back_24dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Profil Resiko"
                    android:textSize="24sp"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/myriadprobold"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:orientation="vertical">


                <TextView
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Profil Resiko Anda"
                    android:textSize="16sp"
                    android:fontFamily="@font/myriadprosemibold"/>
                <TextView
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tipe Moderat"
                    android:textSize="13sp"
                    android:textColor="@android:color/darker_gray"
                    android:fontFamily="@font/myriadprosemibold"/>

                <TextView
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="7/10"
                    android:textSize="72sp"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/myriadprosemibold"/>

                <View
                    android:id="@+id/mutasiDivider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#FF4A90E2"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="16dp"
                            android:layout_weight="1"
                            android:src="@drawable/circle"
                            android:backgroundTint="@color/colorAccent"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:text="Pasar Uang"
                            android:textSize="16sp"
                            android:fontFamily="@font/myriadproregular"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="11%"
                            android:textSize="13sp"
                            android:fontFamily="@font/myriadproregular"/>
                        
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="16dp"
                            android:layout_weight="1"
                            android:src="@drawable/circle"
                            android:backgroundTint="@color/colorAccent"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:text="Obligasi"
                            android:textSize="16sp"
                            android:fontFamily="@font/myriadproregular"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="39%"
                            android:textSize="13sp"
                            android:fontFamily="@font/myriadproregular"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="16dp"
                            android:layout_weight="1"
                            android:src="@drawable/circle"
                            android:backgroundTint="@color/colorAccent"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:text="Saham"
                            android:textSize="16sp"
                            android:fontFamily="@font/myriadproregular"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="50%"
                            android:textSize="13sp"
                            android:fontFamily="@font/myriadproregular"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/llNextButton"
            android:clickable="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded_rectangle_gradient"
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Investasi Sekarang"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/myriadprosemibold"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>