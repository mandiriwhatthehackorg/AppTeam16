<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <LinearLayout
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivMutasi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/common_google_signin_btn_icon_dark"/>

        <TextView
            android:id="@+id/tvMutasiTransaction"
            android:layout_marginLeft="20dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:text="Nouri Olshop"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:fontFamily="@font/myriadproregular"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvMutasiValue"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:text="60.000"
                android:textSize="12sp"
                android:fontFamily="@font/myriadprolight"/>

            <TextView
                android:id="@+id/tvMutasiType"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:text="Uang Keluar"
                android:textSize="10sp"
                android:fontFamily="@font/myriadprolight"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/mutasiDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:background="@android:color/darker_gray"/>

</LinearLayout>